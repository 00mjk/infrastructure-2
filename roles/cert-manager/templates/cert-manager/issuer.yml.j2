apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: '{{ role_name }}-lets-encrypt'
spec:
  acme:
    email: '{{ vault.auth.email }}'
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: '{{ role_name }}-issuer-account-key'
    solvers:
      - dns01:
          digitalocean:
            tokenSecretRef:
              name: '{{ role_name }}-digital-ocean-secret'
              key: access-token
