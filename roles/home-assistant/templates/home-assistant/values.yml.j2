image:
  repository: homeassistant/home-assistant
  tag: '2021.9'

env:
  TZ: '{{ timezone }}'

# needed for wake-on-lan and ps4 integrations
hostNetwork: true

# needed for zigbee usb access
securityContext:
  privileged: true

persistence:
  config:
    enabled: true
    type: hostPath
    hostPath: '{{ root_path }}/{{ role_name }}'
    mountPath: /config
  usb:
    enabled: true
    type: hostPath
    hostPath: /dev/ttyACM0
