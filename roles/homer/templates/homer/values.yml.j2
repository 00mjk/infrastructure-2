# k8s-at-home/homer
# https://github.com/k8s-at-home/charts/blob/master/charts/stable/homer/values.yaml
image:
  repository: b4bz/homer
  tag: latest

env:
  - name: TZ
    value: '{{ timezone }}'
  - name: UID
    value: '{{ ansible_user_uid }}'
  - name: GID
    value: '{{ ansible_user_gid }}'

persistence:
  config:
    enabled: true
    mountPath: /www/assets

configmap:
  config:
    enabled: true
    data:
      config.yml: |
        {{ lookup('template', role_name ~ '/config.yml.j2') | indent(8) }}

keel:
  policy: force
  images:
    - repository: image.repository
      tag: image.tag
