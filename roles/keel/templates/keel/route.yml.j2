---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: dashboard
  namespace: '{{ role_name }}'
spec:
  entryPoints:
    - https
  routes:
    - kind: Rule
      match: Host(`{{ role_name }}.{{ domain }}`)
      services:
        - kind: Service
          name: '{{ role_name }}'
          namespace: '{{ role_name }}'
          port: 9300
      middlewares:
        - name: auth
          namespace: traefik
        - name: security
          namespace: traefik
        - name: error-pages
          namespace: traefik
  tls:
    secretName: '{{ role_name }}.{{ domain }}'
