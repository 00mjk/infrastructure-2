---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: dashboard
  namespace: '{{ role_name }}'
spec:
  entryPoints:
    - https
  routes:
    - kind: Rule
      match: Host(`{{ role_name }}.{{ domain }}`)
      services:
        - kind: Service
          name: '{{ role_name }}-web'
          namespace: '{{ role_name }}'
          port: 80
      middlewares:
        - name: auth
          namespace: traefik
        - name: security
          namespace: traefik
        - name: error-pages
          namespace: traefik
        - name: headers
          namespace: '{{ role_name }}'
        - name: add-prefix
          namespace: '{{ role_name }}'
