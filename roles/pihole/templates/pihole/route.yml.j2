---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: dashboard
  namespace: '{{ role_name }}'
spec:
  entryPoints:
    - https
  routes:
    - kind: Rule
      match: Host(`{{ role_name }}.{{ domain }}`)
      services:
        - kind: Service
          name: '{{ role_name }}-web'
          namespace: '{{ role_name }}'
          port: 80
      middlewares:
        - name: auth
          namespace: traefik
        - name: security
          namespace: traefik
        - name: error-pages
          namespace: traefik
        - name: add-prefix
          namespace: '{{ role_name }}'
---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRouteTCP
metadata:
  name: dns-tcp
  namespace: '{{ role_name }}'
spec:
  entryPoints:
    - dns-tcp
  routes:
    - match: HostSNI(`*`)
      services:
        - name: '{{ role_name }}-dns-tcp'
          namespace: '{{ role_name }}'
          port: 53
---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRouteUDP
metadata:
  name: dns-udp
  namespace: '{{ role_name }}'
spec:
  entryPoints:
    - dns-udp
  routes:
    - services:
      - name: '{{ role_name }}-dns-udp'
        namespace: '{{ role_name }}'
        port: 53
